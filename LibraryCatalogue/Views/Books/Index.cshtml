@{
    ViewData["Title"] = "Books";
    Layout = "_Layout";
}
@using LibraryCatalogue.Models;

<h2>Dynasty's Library</h2>
<br />
<h4>Here is a list of all the Books currently added:</h4>
<br />
<br />

@if(@Model.Count == 0)
{
    <p>No Books have been added yet!</p>
}
else{
    @foreach(Book book in Model)
    {
        <p>@Html.ActionLink(@book.Name, "Details", new {id = @book.BookId})</p>
    }
}

<br />
<br />
<br />
<p class="text-center">@Html.ActionLink("Create a Book Now", "Create", "Books")</p>